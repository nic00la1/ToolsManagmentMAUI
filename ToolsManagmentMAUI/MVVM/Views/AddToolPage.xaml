<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolsManagmentMAUI.MVVM.Views.AddToolPage"
             xmlns:vm="clr-namespace:ToolsManagmentMAUI.ViewModels"
             Title="AddToolPage">
    <ContentPage.BindingContext>
        <vm:AddToolViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Entry Placeholder="Nazwa" Text="{Binding Name}" />
        <Entry Placeholder="Opis" Text="{Binding Description}" />
        <Entry Placeholder="Kategoria" Text="{Binding Category}" />
        <Button Text="Dodaj" Command="{Binding AddToolCommand}" />
    </VerticalStackLayout>
</ContentPage>
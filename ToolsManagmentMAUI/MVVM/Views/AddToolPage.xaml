<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolsManagmentMAUI.MVVM.Views.AddToolPage"
             xmlns:vm="clr-namespace:ToolsManagmentMAUI.ViewModels"
             Title="AddToolPage">
    <ContentPage.BindingContext>
        <vm:AddToolViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Nazwa narzędzia" />
            <Entry Placeholder="Nazwa narzędzia" Text="{Binding Tool.Name}" />
            <Label Text="Ilość" />
            <Entry Placeholder="Ilość" Text="{Binding Tool.Quantity}" Keyboard="Numeric" />
            <Label Text="Cena w zł" />
            <Entry Placeholder="Cena" Text="{Binding Tool.Price}" Keyboard="Numeric" />
            <Button Text="Zapisz" Command="{Binding AddToolCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
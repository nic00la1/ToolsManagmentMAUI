<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToolsManagmentMAUI.MVVM.Views.ToolsDetailsPage"
             xmlns:vm="clr-namespace:ToolsManagmentMAUI.ViewModels"
             Title="ToolsDetailsPage">

    <ContentPage.BindingContext>
        <vm:ToolDetailsViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Nazwa narzędzia" FontSize="Medium" />
        <Entry Text="{Binding Tool.Name}" Placeholder="Nazwa narzędzia" />

        <Label Text="Ilość" FontSize="Medium" />
        <Entry Text="{Binding Tool.Quantity}" Placeholder="Ilość" Keyboard="Numeric" />

        <Label Text="Cena" FontSize="Medium" />
        <Entry Text="{Binding Tool.Price}" Placeholder="Cena" Keyboard="Numeric" />

        <Button Text="Zapisz zmiany" Command="{Binding SaveCommand}" />
        <Button Text="Usuń" Command="{Binding DeleteCommand}" />
    </StackLayout>
</ContentPage>